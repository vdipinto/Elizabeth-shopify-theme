<!-- dynamic icon renderer -->
{%- assign cls = class | default: '' -%}
{%- assign label = title | default: '' -%}

{%- case name -%}
  {%- when 'dropdown' -%}
    {% render 'icon-dropdown', class: cls, title: label %}
  {%- when 'shopping-bag' -%}
    {% render 'icon-shopping-bag', class: cls, title: label %}
  {%- when 'menu' -%}
    {% render 'icon-menu', class: cls, title: label %}
  {%- when 'arrow-up-right' -%}
    {% render 'icon-arrow-up-right', class: cls, title: label %}
  {%- else -%}
    <!-- unknown icon: '{{ name }}' -->
{%- endcase -%}
