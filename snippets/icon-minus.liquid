{%- comment -%}
  Minus icon
  Params:
  - class: extra classes (size/color). Default: "w-5 h-5"
  - title: optional accessible label
{%- endcomment -%}
<svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="{{ class | default: 'w-5 h-5' }}"
    {% if title != blank %}role="img" aria-label="{{ title }}"{% else %}aria-hidden="true"{% endif %}
  >
    <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14" />
  </svg>
  